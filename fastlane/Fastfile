default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    # Install Tuist dependencies
    sh("cd .. && tuist install")
    # Generate project
    sh("cd .. && tuist generate")
    # Configure Code Signing specifically for the App target
    update_code_signing_settings(
      use_automatic_signing: false,
      path: "Friendly.xcodeproj",
      targets: ["Friendly"],
      profile_name: "Friendly App Store",
      team_id: ENV["APPLE_TEAM_ID"],
      code_sign_identity: "Apple Distribution",
      build_configurations: ["Release"]
    )

    # Build and upload to TestFlight
    build_app(
      workspace: "Friendly.xcworkspace",
      scheme: "Friendly",
      export_method: "app-store",
      xcargs: "CURRENT_PROJECT_VERSION='#{ENV['GITHUB_RUN_NUMBER']}'",
      export_options: {
        method: "app-store",
        provisioningProfiles: {
          "me.y9san9.Friendly" => "Friendly App Store"
        }
      }
    )
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end
end
